<!-- Arquivo: views/configuracoes.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Configurações</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('header.ejs', { user: user, currentPage: 'configuracoes' }) %>

    <div class="main-content">
        <h1>Configurações do Usuário</h1>

        <section>
            <h2>Dados Pessoais</h2>
            <p><strong>Nome:</strong> <%= usuario.nome %></p>
            <p><strong>Login:</strong> <%= usuario.login %></p>
            <p><strong>Cargo:</strong> <%= usuario.cargo || 'Não informado' %></p>
            <p><strong>Perfil:</strong> <%= usuario.perfil || 'Não informado' %></p>
            
            <!-- Link para edição (se o usuário for o próprio) -->
            <a href="/usuarios/editar/<%= usuario.id_usuario %>" class="btn-editar">
                <i class="fas fa-edit"></i> Editar Meu Perfil
            </a>
            
        </section>
        
        <section>
            <h2>Segurança</h2>
            <p>Aqui você pode gerenciar sua senha e outras configurações de segurança.</p>
             <a href="/logout" class="btn-cancelar" style="background-color: #dc3545;">
                <i class="fas fa-sign-out-alt"></i> Sair do Sistema
            </a>
        </section>
    </div>
</body>
</html>