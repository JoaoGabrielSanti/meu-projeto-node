<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Editar Empréstimo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('header.ejs', { user: user, currentPage: 'emprestimos' }) %>

    <div class="main-content">
        <h1>Editar Empréstimo #<%= emprestimo.id_emprestimo %></h1>

        <section class="form-section">
            <form action="/emprestimos/editar/<%= emprestimo.id_emprestimo %>" method="POST">
                
                <!-- Seleção de Usuário -->
                <div>
                    <label for="id_usuario">Usuário Responsável:</label>
                    <select id="id_usuario" name="id_usuario" required>
                        <% usuarios.forEach(usuario => { %>
                            <option value="<%= usuario.id_usuario %>" 
                                <%= emprestimo.id_usuario === usuario.id_usuario ? 'selected' : '' %>>
                                <%= usuario.nome %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Seleção de Banco/Financeira -->
                <div>
                    <label for="id_banco">Banco / Financeira:</label>
                    <select id="id_banco" name="id_banco" required>
                        <% bancos.forEach(banco => { %>
                            <option value="<%= banco.id_banco %>"
                                <%= emprestimo.id_banco === banco.id_banco ? 'selected' : '' %>>
                                <%= banco.nome %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Valor e Taxa -->
                <div style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label for="valor">Valor do Empréstimo (R$):</label>
                        <input type="number" id="valor" name="valor" step="0.01" value="<%= emprestimo.valor %>" required>
                    </div>
                    <div style="flex: 1;">
                        <label for="taxa">Taxa de Juros Anual (%):</label>
                        <input type="number" id="taxa" name="taxa" step="0.01" value="<%= emprestimo.taxa %>" required>
                    </div>
                </div>

                <!-- Indexador e Status -->
                <div style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label for="indexador">Indexador (ex: CDI, IPCA):</label>
                        <input type="text" id="indexador" name="indexador" value="<%= emprestimo.indexador || '' %>">
                    </div>
                    <div style="flex: 1;">
                        <label for="status">Status:</label>
                        <select id="status" name="status" required>
                            <% ['Ativo', 'Quitado', 'Pendente'].forEach(s => { %>
                                <option value="<%= s %>" <%= emprestimo.status === s ? 'selected' : '' %>><%= s %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <!-- Datas -->
                <% 
                    // Função para formatar a data (YYYY-MM-DD) para inputs type="date"
                    const formatDate = (dateString) => {
                        if (!dateString) return '';
                        const date = new Date(dateString);
                        const yyyy = date.getFullYear();
                        const mm = String(date.getMonth() + 1).padStart(2, '0'); // Months start at 0!
                        const dd = String(date.getDate()).padStart(2, '0');
                        return `${yyyy}-${mm}-${dd}`;
                    };
                %>
                <div style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label for="data_inicio">Data de Início:</label>
                        <input type="date" id="data_inicio" name="data_inicio" value="<%= formatDate(emprestimo.data_inicio) %>" required>
                    </div>
                    <div style="flex: 1;">
                        <label for="data_fim">Data Prevista de Fim:</label>
                        <input type="date" id="data_fim" name="data_fim" value="<%= formatDate(emprestimo.data_fim) %>">
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn-salvar"><i class="fas fa-save"></i> Salvar Alterações</button>
                    <a href="/emprestimos" class="btn-cancelar">Cancelar</a>
                </div>
            </form>
        </section>
    </div>
</body>
</html>