<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Bancos / Financeiras</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('header.ejs', { user: user, currentPage: 'bancos' }) %>

    <div class="main-content">
        <div class="header-listagem">
            <h1>Gestão de Bancos / Financeiras</h1>
            <a href="/bancos/novo" class="btn-incluir-grande">
                <i class="fas fa-plus-circle"></i> Novo Banco
            </a>
        </div>

        <section>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>CNPJ</th>
                            <th>Contato</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bancos.forEach(banco => { %>
                            <tr>
                                <td><%= banco.id_banco %></td>
                                <td><%= banco.nome %></td>
                                <td><%= banco.cnpj || '-' %></td>
                                <td><%= banco.contato || '-' %></td>
                                <td>
                                    <a href="/bancos/editar/<%= banco.id_banco %>" class="btn-editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/bancos/excluir/<%= banco.id_banco %>" method="POST" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja excluir este banco?');">
                                        <button type="submit" class="btn-excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% if (bancos.length === 0) { %>
                <p style="text-align: center; margin-top: 20px;">Nenhum banco ou financeira cadastrado.</p>
            <% } %>
        </section>
    </div>
</body>
</html>